<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/CreateTrsnB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="CreateTrsn"
        android:text="Create Transaction" />

    <Button
        android:id="@+id/ResolveTrsnB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/CreateTrsnB"
        android:layout_below="@+id/CreateTrsnB"
        android:onClick="ResolveTrsn"
        android:text="Resolve" />

    <Button
        android:id="@+id/ContactB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ResolveTrsnB"
        android:layout_alignBottom="@+id/ResolveTrsnB"
        android:layout_alignRight="@+id/CreateTrsnB"
        android:onClick="Contact"
        android:text="Contact" />

    <Button
        android:id="@+id/ManageGroupB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/NotificationB"
        android:layout_alignParentLeft="true"
        android:onClick="ManageGroup"
        android:text="Manage Groups" />

    <Button
        android:id="@+id/NotificationB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/CreateTrsnB"
        android:layout_below="@+id/ContactB"
        android:onClick="Notification"
        android:text="Notification" />

    <Button
        android:id="@+id/StatisticB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ResolveTrsnB"
        android:layout_below="@+id/ManageGroupB"
        android:onClick="Statistic"
        android:text="Statistic" />

    <Button
        android:id="@+id/SettingB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/CreateTrsnB"
        android:layout_below="@+id/NotificationB"
        android:onClick="Setting"
        android:text="Settings" />

</RelativeLayout>
