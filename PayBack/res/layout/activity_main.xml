<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    android:background="@drawable/activitybackground">

    <Button
        android:id="@+id/CreateTrsnB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:onClick="CreateTrsn"
        android:text="@string/title_activity_create_transaction" />
    
    <Button
        android:id="@+id/ResolveTrsnB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/CreateTrsnB"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/CreateTrsnB"
        android:onClick="ResolveTrsn"
        android:text="@string/title_activity_resolve_transaction" />
    
    <Button
        android:id="@+id/ContactB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ResolveTrsnB"
        android:layout_alignRight="@+id/ResolveTrsnB"
        android:layout_below="@+id/ResolveTrsnB"
        android:onClick="Contact"
        android:text="@string/title_activity_contact" />

    <Button
        android:id="@+id/ManageGroupB"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ContactB"
        android:layout_below="@+id/ContactB"
        android:onClick="ManageGroup"
        android:text="@string/title_activity_manage_group" />

    <Button
        android:id="@+id/NotificationB"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ContactB"
        android:layout_below="@+id/ContactB"
        android:onClick="Notification"
        android:text="@string/title_activity_notification" />


    <Button
        android:id="@+id/StatisticB"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/SettingB"
        android:layout_alignBottom="@+id/SettingB"
        android:layout_alignParentLeft="true"
        android:onClick="Statistic"
        android:text="@string/title_activity_statistic" />
        
    <Button
        android:id="@+id/SettingB"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/NotificationB"
        android:onClick="Setting"
        android:text="@string/action_settings" />

    <Button
        android:id="@+id/button1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="@string/action_logout" />

</RelativeLayout>
